{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "cart_subtotal_price": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "decimal",
      "required": false
    },
    "total_price": {
      "type": "integer",
      "required": true
    },
    "order_item": {
      "type": "component",
      "component": "order-item.order-item",
      "repeatable": true
    },
    "shipping": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping.shipping",
      "inversedBy": "orders"
    }
  }
}
